{
    "name": "widuu/think-addons",
    "description": "thinkphp6 addons support",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "widuu",
            "email": "admin@widuu.com"
        }
    ],
    "require": {
    	"php": ">=7.1.0",
        "topthink/framework": "^6.0.0"
    },
    "autoload": {
        "psr-4": {
            "think\\": "src"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "extra": {
        "think":{
            "config":{
                "addons": "src/config.php"
            }
        }
    },
    "scripts" : {
        "post-install-cmd": [
            "php think addons:service"
        ]
    },
    "minimum-stability": "dev"
}